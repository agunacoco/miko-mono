{
  "extends": "../../tsconfig.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "ES6",
    "typeRoots": ["./src/types"],
    "types": ["offscreencanvas", "workbox-window", "w3c-generic-sensor", "node"],
    "paths": {
      "@src/*": ["src/*"],
      "@public/*": ["public/*"],
      "@miko/share-types/*": ["../shareTypes/*"]
    }
  }
}
