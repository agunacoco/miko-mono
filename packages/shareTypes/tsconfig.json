{
  "extends": "../../tsconfig.json",
  "files": ["index.d.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": "../",
    "types": [],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "paths": {
      "@src/*": ["src/*"]
    }
  }
}
